{
    "compilerOptions": {
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "sourceMap": false,
      "module": "commonjs",
      "moduleResolution": "node",
      "isolatedModules": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "resolveJsonModule": true,
      "noLib": false,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "outDir": "dist",
      "baseUrl": "./src/",
      "skipLibCheck": true,
      "paths": {
        "*": ["src/*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": [
          "node_modules", 
          "dist",
          "_templates",
          "coverage",
          "logs",
          "typings/main", 
          "typings/main.d.ts",
          "**/*.spec.ts",
          "**/*.test.ts"]
  }